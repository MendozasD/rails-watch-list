<br><br><br><br><br>

<h1><%= @list.name %></h1>

<% @bookmark.each do |bmark| %>
  <p><%= bmark.movie.poster_url %></p>
  <p><%= bmark.comment %></p>
  <p><%= bmark.movie.title %></p>
  <ul>
    <li class="list-group-item">
      <%= link_to "Remove",
                  bookmark_path(bmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
  </ul>
<% end %>

<%= link_to "Add Movie",  new_list_bookmark_path(@list) %>
<%= link_to "Go Back",  lists_path %>
